{
  "scripts": {
    "start": "better-npm-run start",
    "build:client": "webpack --optimize-minimize --config webpack.prod.config.js --progress",
    "build": "better-npm-run build",
    "clean": "rimraf dist/*",
    "test": "better-npm-run test",
    "wtest": "better-npm-run wtest",
    "repl": "babel-node",
    "eslint:server": "eslint server.js src/server/*",
    "reset": "redis-cli flushdb;"
  },
  "betterScripts": {
    "build": {
      "command": "npm run clean && npm run build:client",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start": {
      "command": "nodemon server.js --exec 'npm run eslint:server && node' --ignore src/client",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "wtest": {
      "command": "nodemon --exec 'npm run eslint:server && mocha --require babel-register test/*'",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test": {
      "command": "npm run eslint:server && mocha --require babel-register test/*",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "dependencies": {
    "better-npm-run": "0.0.15",
    "body-parser": "^1.17.2",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.2",
    "express": "^4.15.2",
    "express-session": "^1.15.3",
    "mocha": "^3.4.2",
    "morgan": "^1.8.2",
    "multiparty": "^4.1.3",
    "passport": "^0.3.2",
    "passport-twitter": "^1.0.4",
    "redis": "^2.7.1",
    "socket.io": "^2.0.2",
    "twit": "^2.2.9",
    "uuid": "^3.1.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.1",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-react": "^7.0.1",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "nodemon": "^1.11.0",
    "react": "^15.5.4",
    "react-autocomplete": "^1.5.9",
    "react-dom": "^15.5.4",
    "react-flip-move": "^2.9.13",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.6.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.2.0",
    "style-loader": "^0.17.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.5.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.18.0"
  }
}
