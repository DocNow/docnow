{
  "scripts": {
    "postinstall": "npm run build",
    "start": "better-npm-run start",
    "build:client": "webpack --optimize-minimize --config webpack.prod.config.js --progress",
    "build": "better-npm-run build",
    "clean": "rimraf dist/*"
  },
  "betterScripts": {
    "build": {
      "command": "npm run clean && npm run build:client",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start": {
      "command": "nodemon server.js --ignore src/client",
      "env": {
        "DEBUG": "express:*",
        "NODE_ENV": "development"
      }
    }
  },
  "dependencies": {
    "better-npm-run": "0.0.15",
    "express": "^4.15.2",
    "socket.io": "^2.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.1",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-react": "^7.0.1",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "nodemon": "^1.11.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-flip-move": "^2.9.13",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "style-loader": "^0.17.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.5.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.18.0"
  }
}
